{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="col-lg-12 mt-3">
            {% for flashMessage in app.session.flashbag.get('login_success') %}
                <div class="flash-notice alert alert-success">
                    <center>
                        {{ flashMessage }}
                    </center>
                </div>
            {% endfor %}
        </div>

        <div class="col-lg-12">
            <div class="d-grid gap-2">
                <center>
                    <a href="{{ path('ejercicios') }}" class="btn btn-warning btn-lg mt-4"> Volver a Ejercicios</a>
                </center>
            </div>
        </div>
    
    </div>
    
{% endblock %}