{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="col-lg-12">
            {{ form_start(form, {'attr': {'class': 'form-signin needs-validation'}, 'id': 'login'}) }}
                <div class="text-center mt-4 mb-4">
                    <p>Bienvenido al sistema APROBANDO CURSO SF4.4</p>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label for="email" class="col-form-label text-right">Usuario SF</label>
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}, 'id': 'email'}) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label for="password" class="col-form-label text-right">Contraseña</label>
                        {{ form_widget(form.password, {'attr': {'class': 'form-control'}, 'id': 'password'}) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        {% for flashMessage in app.session.flashbag.get('login_error') %}
                            <div class="flash-notice alert alert-danger mt-3">
                                <center>
                                    {{ flashMessage }}
                                </center>
                            </div>
                        {% endfor %}
                        {{ form_widget(form._token) }}
                        {{ form_widget(form.ingresar, {'attr': {'class': 'btn btn-lg btn-primary mt-3'}, 'label': 'Ingresar', 'id': 'ingresar'}) }}
                        <p class="mt-5 mb-3 text-muted text-center">© 2021</p>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
    
    
{% endblock %}